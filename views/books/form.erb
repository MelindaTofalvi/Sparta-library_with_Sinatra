<form action="/<%=@book.id%>" method="POST">
 <div>
   <label>Title</label>
   <input type="text" name="title" placeholder="Enter a title" value="<%= @book.title %>">
 </div>
 <div>
   <label>Body</label>
   <textarea name="body"><%= @book.body %></textarea>
 </div>
 <div>
   <input type="submit" value="Save Post">
 </div>
 <% if(@book.id != "") %>
 <!--Method override-->
   <input type="hidden" name="_method" value="PUT">
 <% end %>
</form>